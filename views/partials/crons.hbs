<div class="container">
    <div class="card ">
        <div class="card-header p-1 text-center">
            Jobs
        </div>
        <div  class="card-body overflow-auto p-1 row" >
            {{#each jobs}}
                <div class="col-sm-5 mb-1">
                    <div class="card ">
                        <div class="card-header p-1 text-capitalize text-center">
                            <span >{{@key}} </span>
                            <div class="spinner-grow {{#if this.running}}text-success{{else}}text-danger{{/if}} spinner-grow-sm" role="status"></div>
                        </div>
                        <div class="card-body p-1">
                            {{#if this.lastExecution}}
                                <div class="p-1">
                                    <i class="bi bi-calendar3"></i>
                                     <span class="">Interval: [ {{this.cronTime.source}} ]</span>
                                </div>
                                <div class="p-1">
                                    <i class="bi bi-clock-history"></i>
                                    <span>Last run: {{#dateToString this.lastExecution}}{{/dateToString}}</span>
                                </div>
                                <div class="dropdown-divider"></div>
                            {{/if}}
                            <div class="custom-control custom-switch text-center">
                                <input type="checkbox"  class="custom-control-input" id="id_{{@key}}" {{#if this.running}} checked {{/if}} value="{{@key}}">
                                <label class="custom-control-label" for="id_{{@key}}"></label>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>