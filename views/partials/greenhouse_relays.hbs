<div class="mt-3 text-info">
    <h5>
        <i class="fad fa-light-switch-on"></i> Relays
    </h5>
</div>
{{#if status}}
<div class="container" style="margin-bottom: 10rem">
    <div class="row row-cols-2 p-1">
        <div class="col p-1">
            <div class="container card shadow mb-3rounded-lg">
                <div class="row row-cols-2 ">
                    <div class="col p-2 text-center">
                        <span class="card-title" >Fan In</span>
                    </div>
                    <div class="col p-2 text-center mt-1">
                        <i class="fad fa-fan {{#if status.fan_in}}text-success{{else}}text-danger{{/if}}" style="font-size: 2rem"></i>
                    </div>
                </div>
                <div class="row row-cols-1 p-2">
                    <div class="col mb-2">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: {{#percent status.fan_in 255}}{{/percent}}%" aria-valuenow="{{status.fan_in}}" aria-valuemin="0" aria-valuemax="255">
                                {{#percent status.fan_in 255}}{{/percent}}%
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="custom-control custom-switch text-center">
                            <form method="POST" action="/fan">
                                <input type="checkbox"
                                       onchange="this.closest('form').submit()"
                                       class="custom-control-input" id="id_fan_in"
                                    {{#ifGreater status.fan_in 0}} checked {{/ifGreater}}/>
                                <label class="custom-control-label" for="id_fan_in"></label>
                                <input type="hidden" name="name" value="fanIn" />
                                <input type="hidden" name="status" value="{{#ifGreater status.fan_in 0}}0{{else}}1{{/ifGreater}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col p-1">
            <div class="container card shadow mb-3rounded-lg">
                <div class="row row-cols-2 ">
                    <div class="col p-2 text-center">
                        <span class="card-title" >Fan Out</span>
                    </div>
                    <div class="col p-2 text-center mt-1">
                        <i class="fad fa-fan {{#if status.fan_out}}text-success{{else}}text-danger{{/if}}" style="font-size: 2rem"></i>
                    </div>
                </div>
                <div class="row row-cols-1 p-2 ">
                    <div class="col mb-2">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: {{#percent status.fan_out 255}}{{/percent}}%" aria-valuenow="{{status.fan_out}}" aria-valuemin="0" aria-valuemax="255">
                                {{#percent status.fan_out 255}}{{/percent}}%
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="custom-control custom-switch text-center">
                            <form method="POST" action="/fan">
                                <input type="checkbox"
                                       onchange="this.closest('form').submit()"
                                       class="custom-control-input" id="id_fan_out"
                                    {{#ifGreater status.fan_out 0}} checked {{/ifGreater}}/>
                                <label class="custom-control-label" for="id_fan_out"></label>
                                <input type="hidden" name="name" value="fanOut" />
                                <input type="hidden" name="status" value="{{#ifGreater status.fan_out 0}}0{{else}}1{{/ifGreater}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col p-1">
            <div class="container card shadow mb-3rounded-lg">
                <div class="row row-cols-2 ">
                    <div class="col p-2 text-center">
                        <span class="card-title mb-0 " >Veg Lights</span>
                    </div>
                    <div class="col p-2 text-center mt-1">
                        <i class="fad {{#if status.veg_lamp_off}}fa-lightbulb text-danger{{else}}fa-lightbulb-on text-warning{{/if}}" style="font-size: 2rem"></i>
                    </div>
                </div>
                <div class="row row-cols-1 p-2">
                    <div class="col">
                        <div class="custom-control custom-switch text-center">
                            <form method="POST" action="/lights">
                                <input type="checkbox"
                                       onchange="this.closest('form').submit()"
                                       class="custom-control-input" id="id_veg_lights"
                                    {{#unless status.veg_lamp_off}} checked {{/unless}}/>
                                <label class="custom-control-label" for="id_veg_lights"></label>
                                <input type="hidden" name="name" value="vegPhase" />
                                <input type="hidden" name="status" value="{{#if status.veg_lamp_off}}0{{else}}1{{/if}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col p-1">
            <div class="container card shadow mb-3rounded-lg">
                <div class="row row-cols-2 ">
                    <div class="col p-2 text-center">
                        <span class="card-title mb-0 " >Flower Lights</span>
                    </div>
                    <div class="col p-2 text-center mt-1">
                        <i class="fad fa-lightbulb {{#if status.fruit_lamp_off}}text-danger{{else}}fa-lightbulb-on text-warning{{/if}}" style="font-size: 2rem"></i>
                    </div>
                </div>
                <div class="row row-cols-1 p-2">
                    <div class="col">
                        <div class="custom-control custom-switch text-center">
                            <form method="POST" action="/lights">
                                <input type="checkbox"
                                       onchange="this.closest('form').submit()"
                                       class="custom-control-input" id="id_flower_lights"
                                    {{#unless status.fruit_lamp_off}} checked {{/unless}}/>
                                <label class="custom-control-label" for="id_flower_lights"></label>
                                <input type="hidden" name="name" value="fruitPhase" />
                                <input type="hidden" name="status" value="{{#if status.fruit_lamp_off}}0{{else}}1{{/if}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col p-1">
            <div class="container card shadow mb-3rounded-lg">
                <div class="row row-cols-2 ">
                    <div class="col p-2 text-center">
                        <span class="card-title mb-0 " >Pomp</span>
                    </div>
                    <div class="col p-2 text-center mt-1">
                        <i class="fad fa-faucet-drip {{#if status.pomp_off}}text-danger{{else}}text-info{{/if}}" style="font-size: 2rem"></i>
                    </div>
                </div>
                <div class="row row-cols-1 ">
                    <div class="col  text-center mt-1">
                        <i class="fad fa-water text-info"></i><small> {{tank.current_capacity}}L</small>
                        <div class="progress w-100">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: {{#percent tank.current_capacity tank.max_capacity}}{{/percent}}%" aria-valuenow="{{status.current_capacity}}" aria-valuemin="0" aria-valuemax="{{tank.max_capacity}}">
                                {{#percent tank.current_capacity tank.max_capacity}}{{/percent}}%
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 p-2">
                    <div class="col">
                        <div class="custom-control custom-switch text-center">
                            <form method="POST" action="/pomp">
                                <input type="checkbox"
                                       onchange="this.closest('form').submit()"
                                       class="custom-control-input" id="id_pomp"
                                    {{#unless status.pomp_off}} checked {{/unless}}/>
                                <label class="custom-control-label" for="id_pomp"></label>
                                <input type="hidden" name="name" value="pomp" />
                                <input type="hidden" name="status" value="{{#if status.pomp_off}}1{{else}}0{{/if}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}