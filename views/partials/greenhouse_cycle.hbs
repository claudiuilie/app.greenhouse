{{#each greenhouseGrowth}}
    <div class="container p-2">
        <div class="row row-cols-1 justify-content-center">
            <div class="col card shadow mb-3 rounded-lg">
                <div class="mt-3 text-info">
                    <h6>
                        <span class="float-right">
                            {{#ifEquals this.stage_id 1}}
                                <span class="m-0 text-center"><i class="fad fa-seedling text-success fa-lg"></i> </span>
                            {{/ifEquals}}
                            {{#ifEquals this.stage_id 2}}
                                <span class="m-0 text-center"><i class="fad fa-cannabis text-success fa-lg"></i> </span>
                            {{/ifEquals}}
                            {{#ifEquals this.stage_id 3}}
                                <span class="m-0 text-center"><i class="fad fa-flower text-danger fa-lg"></i> </span>
                            {{/ifEquals}}
                        </span>
                        <span>
                            <i class="fad fa-sync-alt "></i> Cycle{{#if this.end_date}} completed <i class="fad fa-check text-success"></i>{{else}} in progress <div class="spinner-grow text-success spinner-grow-sm" role="status"></div>{{/if}}
                        </span>

                    </h6>
                </div>
                <div class="dropdown-divider"></div>
                <div class="container p-0">
                    <div class="row row-cols-3 p-0 justify-content-center rounded m-0">
                        <div class="col p-0">
                            <div>
                                <div class="card-body p-0 text-center text-muted">
                                    <small class="font-weight-bold">
                                        <i class="fad fa-thermometer-full text-warning fa-lg"></i>
                                        <span class="text-muted">{{this.min_temp}}&#176;C - {{this.max_temp}}&#176;C</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col p-0">
                            <div>
                                <div class="card-body p-0 text-center ">
                                    <small class="font-weight-bold">
                                        <i class="fad fa-tint text-info fa-lg"></i>
                                        <span class="text-muted"> {{this.min_humidity}}</span>
                                        <i class="fad fa-percentage text-muted"></i>
                                        <span class="text-muted"> - {{this.max_humidity}}</span>
                                        <i class="fad fa-percentage text-muted"></i>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col p-0">
                            <div>
                                <div class="card-body p-0 text-center text-muted">
                                    <small class="font-weight-bold">
                                        <i class="fad fa-lightbulb-on text-warning"></i>
                                        <span class="text-muted">{{this.lamp_start}}:00 - {{this.lamp_stop}}:00</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="container">
                    <div class="row row-cols-1 p-1 justify-content-center   rounded card-body">
                        <div class="col p-1">
                            <small class="text-muted font-weight-bold"><i class="fad fa-calendar-day"></i> Start date: {{this.start_date}}</small>
                        </div>
                        {{#if this.end_date }}
                            <div class="col p-1">
                                <small class="text-muted font-weight-bold"><i class="fad fa-calendar-day"></i> End date: {{this.end_date}}</small>
                            </div>
                        {{/if}}
                        {{#if this.active_cycle}}
                            <div class="col p-1">
                                <small class="text-muted font-weight-bold">Progress: {{#daysToToday this.start_date_format}}{{/daysToToday}} days</small>
                            </div>
                        {{else}}
                            <div class="col p-1">
                                <small class="text-muted font-weight-bold">Total: {{#daysDiff this.start_date_format this.end_date_format}}{{/daysDiff}} days</small>
                            </div>
                        {{/if}}
                    </div>
                </div>
                {{#unless this.end_date }}
                    <div class="dropdown-divider"></div>
                    <div class="row row-cols-1 p-1 justify-content-center">
                        <div class="col p-1 text-center">
                            <button type="button" class="btn btn-outline-warning  font-weight-bold">End Cycle</button>
                        </div>
                    </div>
                {{/unless}}
            </div>
        </div>
    </div>
{{/each}}