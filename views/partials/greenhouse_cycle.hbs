{{#if greenhouseGrowth.active_cycle}}
    <div class="mt-3 text-info">
        <h5>
            <i class="fad fa-sync-alt "></i> Cycle
        </h5>
    </div>
    <div class="container">
        <div class="row row-cols-1 justify-content-center">
            <div class="col card shadow mb-3 rounded-lg">
                {{#if greenhouseGrowth.active_cycle}}
                    {{#ifEquals greenhouseGrowth.stage_id 1}}
                        <span class="m-0 text-center"><i class="fad fa-seedling text-success"></i> </span>
                    {{/ifEquals}}
                    {{#ifEquals greenhouseGrowth.stage_id 2}}
                        <span class="m-0 text-center"><i class="fad fa-cannabis text-success"></i> </span>
                    {{/ifEquals}}
                    {{#ifEquals greenhouseGrowth.stage_id 3}}
                        <span class="m-0 text-center"><i class="fad fa-flower text-danger"></i> </span>
                    {{/ifEquals}}
                    <div class="row row-cols-2 p-1 justify-content-center">
                        <div class="col p-1">
                            <div class="card shadow rounded-lg p-1">
                                <div class="card-body p-0 text-center text-success">
                                    <small class="font-weight-bold"><i
                                            class="fad fa-clock"></i> {{greenhouseGrowth.start_date}}
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col p-1">
                            <div class="card shadow rounded-lg p-1">
                                <div class="card-body p-0 text-center text-success">
                                    <small class="font-weight-bold"><i
                                            class="fad fa-clock"></i> {{greenhouseGrowth.end_date}}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                {{else}}
                <div class="container mt-2">
                    <div class="alert alert-warning lert-dismissible fade show text-center p-1" role="alert">
                        <small>There is no active cycle!</small>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {{/if}}
            </div>
            </div>
        </div>
    </div>
{{/if}}
