{{#if status.variables}}
    <div class="mt-3">
        <h5>
            <i class="bi bi-clipboard-data" style="font-size: 1.3rem"></i> General Stats
            <small>
                <i class="bi bi-chevron-down"></i>
            </small>
        </h5>
    </div>
    <div class="row row-cols-3 p-1">
        <div class="col p-1">
            <div class="card shadow mb-3 rounded">
                <div class="card-body p-0">
                    <h6 class="card-title pt-1 pl-2 mb-0">{{status.variables.temperature}}&#176;C</h6>
                    <small class="card-subtitle pl-1 text-muted"><i class="bi bi-thermometer-half"></i> Temperature</small>
                    <div class="mt-3" style=" ">
                        <canvas class="h-100" id="greenhouseTemperatureChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col p-1">
            <div class="card shadow mb-3 rounded">
                <div class="card-body p-0">
                    <h6 class="card-title pt-1 pl-2 mb-0">{{status.variables.humidity}}<small>%</small></h6>
                    <small class="card-subtitle pl-1 text-muted"><i class="bi bi-droplet-half"></i> Humidity</small>
                    <div class="mt-3" style=" ">
                        <canvas class="h-100" id="greenhouseHumidityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col p-1">
            <div class="card shadow mb-3 rounded">
                <div class="card-body p-0">
                    <h6 class="card-title pt-1 pl-2 mb-0">{{status.variables.soil_moisture}}<small>%</small></h6>
                    <small class="card-subtitle pl-1 text-muted"><i class="bi bi-moisture"></i> Soil Moisture</small>
                    <div class="mt-3" style=" ">
                        <canvas class="h-100" id="greenhouseSoilMoistureChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
    window.onload = function() {
        let ctx1 = document.getElementById('greenhouseTemperatureChart');
        let ctx2 = document.getElementById('greenhouseHumidityChart');
        let ctx3 = document.getElementById('greenhouseSoilMoistureChart');
        let greenhouseChart1 = new Chart(ctx1, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{tempHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{tempHistory.data}}],
                    backgroundColor: [
                        'rgb(255,239,147)'],
                    borderWidth: 0,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });

        let greenhouseChart2 = new Chart(ctx2, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{humHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{humHistory.data}}],
                    backgroundColor: [
                        'rgb(147,233,255)'],
                    borderWidth: 0,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });

        let greenhouseChart3 = new Chart(ctx3, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{soilHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{soilHistory.data}}],
                    backgroundColor: [
                        'rgb(162,143,130)'],
                    borderWidth: 0,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });
    }
    </script>
{{/if}}