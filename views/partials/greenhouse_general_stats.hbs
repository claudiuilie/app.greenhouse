{{#if status}}
    <div class="mt-3 text-info">
        <h5>
            <i class="fad fa-analytics"></i> General Stats
        </h5>
    </div>
    <div class="container">
        <div class="row row-cols-3 p-1 ">
<!--            temperature-->
            <div class="col p-1">
                <div class="card shadow mb-3 rounded-lg">
                    <div class="card-body p-0">
                        <small class="card-subtitle pl-1 text-warning"><i class="far fa-thermometer-quarter"></i> Temperature</small>
                        <h6 class="card-title pt-1 pl-2 mb-0 text-muted">{{status.temperature}}&#176;C</h6>
                        <div class="mt-3" style="height: 6rem">
                            <canvas class="h-100" id="greenhouseTemperatureChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
<!--            humidity-->
            <div class="col p-1">
                <div class="card shadow mb-3 rounded-lg">
                    <div class="card-body p-0">
                        <small class="card-subtitle pl-1 text-info"><i class="fad fa-tint"></i> Humidity</small>
                        <h6 class="card-title pt-1 pl-2 mb-0 text-muted">{{status.humidity}}<small>%</small></h6>
                        <div class="mt-3" style="height: 6rem">
                            <canvas class="h-100" id="greenhouseHumidityChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
<!--            soil moisture-->
            <div class="col p-1">
                <div class="card shadow mb-3 rounded-lg">
                    <div class="card-body p-0">
                        <small class="card-subtitle pl-1" style="color: saddlebrown"><i class="fad fa-humidity"></i> Soil Moisture</small>
                        <h6 class="card-title pt-1 pl-2 mb-0 text-muted">{{status.soil_moisture_1}}<small>%</small></h6>
                        <div class="mt-3" style="height: 6rem">
                            <canvas class="h-100" id="greenhouseSoilMoistureChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    window.onload = function() {
        let ctx1 = document.getElementById('greenhouseTemperatureChart');
        let ctx2 = document.getElementById('greenhouseHumidityChart');
        let ctx3 = document.getElementById('greenhouseSoilMoistureChart');
        let greenhouseChart1 = new Chart(ctx1, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{tempHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{tempHistory.data}}],
                    backgroundColor: [
                        'rgb(255,239,147)'],
                    borderWidth: 1,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });

        let greenhouseChart2 = new Chart(ctx2, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{humHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{humHistory.data}}],
                    backgroundColor: [
                        'rgb(147,233,255)'],
                    borderWidth: 0,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });

        let greenhouseChart3 = new Chart(ctx3, {
            type: 'line',
            fill: true,
            data: {
                labels: [{{soilHistory.labels}}],
                datasets: [{
                    label: false,
                    data: [{{soilHistory.data}}],
                    backgroundColor: [
                        'rgb(162,143,130)'],
                    borderWidth: 0,
                    pointRadius: 0
                }]
            },
            options: {
                legend: {
                    display: false
                },
                gridLines: {
                    display: false
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {
                            display:false
                        },
                        display: false
                    }]
                }
            }
        });
    }
    </script>
{{/if}}